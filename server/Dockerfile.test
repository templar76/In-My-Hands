FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Create user and switch early
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    mkdir -p logs && \
    chown nodejs:nodejs /app logs

USER nodejs

# Copy with correct ownership
COPY --chown=nodejs:nodejs src/ ./src/
COPY --chown=nodejs:nodejs *.js ./
COPY --chown=nodejs:nodejs serviceAccountKey.json* ./

# Expose port 4000 (non 5000)
EXPOSE 4000

# Health check aggiornato per porta 4000
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD node -e "require('http').get('http://localhost:4000/api/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start the application
CMD ["node", "src/index.js"]